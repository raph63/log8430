extends layout

block content
	h1 Playlist
	p(hidden="") There is no music in the playlist
	table
		thead
			tr
				th
				th#apiImage
					span
						| API 
						i(aria-hidden="true")
				th#title.ordered
					span
						| Name 
						i.fa.fa-chevron-down(aria-hidden="true")
				th#artist
					span
						| Artist 
						i(aria-hidden="true")
				th#time
					span
						| Time 
						i(aria-hidden="true")
				th
		tbody

block otherScripts
	script(type="text/javascript", src="./assets/scripts/playlist.controller.js")